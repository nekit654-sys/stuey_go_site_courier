{
  "tests": [
    {
      "name": "Get telegram connection status - not connected",
      "method": "GET",
      "path": "/",
      "headers": {
        "X-User-Id": "999999"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "connected": false
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Link telegram account",
      "method": "POST",
      "path": "/",
      "headers": {
        "X-User-Id": "1"
      },
      "body": {
        "telegram_id": "123456789"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    }
  ]
}
